@{
    ViewBag.Title = "List of Students";
}

<h2>@ViewBag.Title</h2>

<p><a href="@Url.Action("Create", "Student")">Add New Student</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in ViewBag.Students)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Address</td>
                <td>@student.Age</td>
                <td>
                    <a href="@Url.Action("ViewDetails", "Student", new { id = student.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
