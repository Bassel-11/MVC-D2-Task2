@{
    ViewBag.Title = "Student Details";
}

<h2>@ViewBag.Title</h2>

@if (ViewBag.SingleStudent != null)
{
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @ViewBag.SingleStudent.Name
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @ViewBag.SingleStudent.Address
            </dd>
            <dt class="col-sm-2">
                Age
            </dt>
            <dd class="col-sm-10">
                @ViewBag.SingleStudent.Age
            </dd>
        </dl>
    </div>
}
else
{
    <p>Student not found.</p>
}

<p>
    <a href="@Url.Action("GetAll", "Student")">Back to List</a>
</p>
