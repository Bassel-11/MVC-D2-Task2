@{
    ViewBag.Title = "List of Departments";
}

<h2>@ViewBag.Title</h2>

<p><a href="@Url.Action("Create", "Department")" class="btn btn-success m-3">Add Department</a></p>

<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Department Id</th>
            <th scope="col">Department Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td> 
                <td>
                    <a href="@Url.Action("ViewDetails", "Department", new { id = item.Id })" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
